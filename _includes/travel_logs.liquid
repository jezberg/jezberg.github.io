<div class="news">
  {% if site.travellogs != blank %}
    {% assign day_number = site.travellogs | size %}
    {% assign logs_size = site.travellogs | size %}
    <div
      class="table-responsive"
      {% if site.travellogs.scrollable and logs_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign latest_logs = site.travellogs %}
        {% assign latest_logs_limit = latest_logs_size %}
        {% for item in latest_logs reversed limit: latest_logs_limit %}
          <tr>
            <th scope="row" style="width: 20%">Day {{ day_number }}</th>
            <td>
                <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
            </td>
            {% if item.summary %}
            <td>
               <p>{{ item.summary }}</p>
            </td>
           {% endif %}
          </tr>
          {% assign day_number = day_number | minus: 1 %}
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No logs so far...</p>
  {% endif %}
</div>
